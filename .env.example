# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_MULTIPLE_DATABASES=userdb,teamdb

# Database Connection (shared by userservice and teamservice)
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Database Names
USER_DB_NAME=userdb
TEAM_DB_NAME=teamdb

# JWT Secret Key (shared across all services)
JWT_SECRET_KEY=your-secret-jwt-key-change-this-in-production

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_ROOT_USERNAME=mongoadmin
MONGO_ROOT_PASSWORD=mongoadmin
MONGO_DATABASE=nefosdb
MONGO_AUTH_DATABASE=admin

# Frontend Configuration
NODE_ENV=development

# Setup Script Configuration (for creating superusers)
# Userservice Superuser
SETUP_USER_EMAIL=admin@example.com
SETUP_USER_PASSWORD=changeme
SETUP_USER_FIRST_NAME=Admin
SETUP_USER_LAST_NAME=User

# Teamservice Superuser
SETUP_TEAM_USERNAME=admin
SETUP_TEAM_PASSWORD=changeme
SETUP_TEAM_EMAIL=admin@example.com
